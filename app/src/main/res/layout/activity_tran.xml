<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yulu.zhaoxinpeng.xfyundemo.TranActivity">


    <Button
        android:text="@string/button_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_pause"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_resume"
        tools:layout_constraintBaseline_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button_Synthesizer" />

    <Button
        android:text="@string/button_synthesizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Synthesizer"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp" />

    <Button
        android:text="@string/button_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_resume"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/button_Synthesizer"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/button_pause"
        android:layout_marginLeft="32dp" />

    <Button
        android:text="@string/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_stop"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_resume"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/button_resume"
        android:layout_marginLeft="32dp" />
</android.support.constraint.ConstraintLayout>
