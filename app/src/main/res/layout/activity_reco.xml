<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reco"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yulu.zhaoxinpeng.xfyundemo.RecoActivity">

    <Button
        android:text="@string/startReco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="88dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_show"
        app:layout_constraintLeft_toLeftOf="@+id/button_start"
        android:layout_marginTop="152dp"
        app:layout_constraintTop_toBottomOf="@+id/button_start" />

    <Button
        android:text="@string/push_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_push_contacts"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_start"
        android:layout_marginStart="64dp"
        app:layout_constraintLeft_toRightOf="@+id/button_start"
        android:layout_marginLeft="64dp" />
</android.support.constraint.ConstraintLayout>
