<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yulu.zhaoxinpeng.xfyundemo.MainActivity">


    <Button
        android:text="@string/button_Reco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Reco"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="88dp" />

    <Button
        android:text="@string/button_Tran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Tran"
        app:layout_constraintLeft_toLeftOf="@+id/button_Reco"
        app:layout_constraintRight_toRightOf="@+id/button_Reco"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/button_Reco"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />
</android.support.constraint.ConstraintLayout>
